$( document ).ready(function() {
	
	/*ITS Custom lightbox*/
	if($(".ITS_Content_CustomLightBox.prod")[0]){
	  var its_customlb_content=$(".ITS_Content_CustomLightBox").html();
      $("html").addClass('fancybox-margin fancybox-lock');
      $("body").append('\
        <div class="custom-lightbox">\
          <div class="custom-lightbox__overlay js-custom-lightbox-close"></div>\
            <div class="custom-lightbox__holder">\
              <div class="custom-lightbox__body_its">\
                <a title="Close" class="custom-lightbox__cross js-custom-lightbox-close" style="z-index:99999" href="javascript:;"></a>\
				<div class="ITS_Content_CustomLightBox-LBContent"></div\
              </div>\
			</div>\
          </div>\
        </div>')
		$(".ITS_Content_CustomLightBox-LBContent").append(its_customlb_content);
      $(".custom-lightbox__cross").focus()
	  
      $(".custom-lightbox__body_its").removeAttr("style")
      var containerWidth_its = $(".custom-lightbox__body_its").width(),
        containerHeight_its = $(".custom-lightbox__body_its").height(),
        buf_its = 36 * 2
        $(".custom-lightbox__body_its").css({
          "width": (containerWidth_its - buf_its) + "px",
          "height": (containerHeight_its - buf_its) + "px",
        })	
	}
	/*EOF ITS Custom lightbox*/
	
	/*Internal Search*/
	$("#internal_search_site_btn").click(function(){
	window.open("https://www.polyu.edu.hk/internalsearch/?q="+$("#site-search").val(), '_blank');
	return false;
	});
	$("#internal_search_page_btn").click(function(){
		window.open("https://www.polyu.edu.hk/internalsearch/?q="+$("#search-page").val(), '_blank');
		return false;
	});
	/*EOF Internal Search*/
});